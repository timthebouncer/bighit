---
import Button from '~/components/ui/Button.astro';
const { menuData } = Astro.props;
---

<ul class="flex flex-col items-center w-1/3">
  {
    menuData.links.map((item, index) => (
      <li
        :key={index}
        class="flex justify-center items-center text-white font-bold text-center w-[364px] h-[102px] cursor-pointer border-b-2 border-solid border-[#FFFFFF3D]"
      >
        {item.links.length === 1 ? (
          <a class="w-full h-full flex justify-center items-center" href={item.links[0].href}>
            {item.title}
          </a>
        ) : (
          <Button variant={'link'}>{item.title}</Button>
        )}
      </li>
    ))
  }
</ul>
